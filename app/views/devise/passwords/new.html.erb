<%= stylesheet_link_tag 'user-actions' %>
<div class="action-container">
<h2>Forgot your password?</h2>
  <div class="user-actions">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-3">
        <%= f.label :email, for:"email", class:"form-label"%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", type:"email", class:"form-control", id:"email" %>
      </div>
      <%= f.submit "Reset Password", class:"actions btn btn-primary"%>
    <% end %>
  </div>
  <div class="bottom-container">
    <div><%= link_to "Don't have an account?", new_registration_path(resource_name) %></div>
    <div>Already have an account? <%= link_to "Log in", new_session_path(resource_name) %></div>
  </div>
</div>
