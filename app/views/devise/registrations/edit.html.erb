<%= stylesheet_link_tag 'user-actions' %>
<div class="action-container">
<h2>Edit <%= resource_name.to_s.humanize %></h2>
  <div class="user-actions">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-3">
        <%= f.label :email, for:"email", class:"form-label"%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", type:"email", class:"form-control", id:"email" %>
      </div>
      <div class="mb-3">
        <%= f.label :new_password, for:"new", class:"form-label" %>
        <%= f.password_field :new_password, autocomplete: "new", type:"password", class:"form-control", id:"new" %>
      </div>
      <div class="mb-3">
        <%= f.label :new_password_confirmation, for:"new-confirmation", class:"form-label" %>
        <%= f.password_field :new_password_confirmation, autocomplete: "new-confirmation", type:"password", class:"form-control", id:"new-confirmation" %>
      </div>
      <div class="mb-3">
        <%= f.label :current_password, for:"current-password", class:"form-label" %>
        <%= f.password_field :current_password, autocomplete: "current-password", type:"password", class:"form-control", id:"current-password" %>
      </div>
      <div class="mb-3">
        <%= f.submit "Change my password", class:"actions btn btn-primary"%>
      </div>
    <% end %>
  </div>
  <div class="cancel-container">
    <h5>Or</h5>
    <p><%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"actions btn btn-danger" %></p>
  </div>
  <div class="bottom-container">
    <div><%= link_to "Back", :back %></div>
  </div>
</div>
